@model ExpenseTracker.Application.Requests.Auth.ForgotPasswordRequest

@{
    ViewData["PageTitle"] = "Forgot Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="widget p-5" style="background-color:#212b36">
            <h2 class="text-center mb-5">Forgot Password</h2>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="email" placeholder="Email" ejs-for="Email" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Email" class="text-danger fs-6"></span>
                </div>
                <div class="d-grid gap-2">
                    <ejs-button id="submit" type="submit" content="Reset Password" cssClass="e-success"></ejs-button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="Login" class="text-info">Back to Login</a>
            </div>
            <div class="mt-3 text-center">
                <a asp-action="Login" class="text-info">Already have an account?</a>
            </div>
            <div class="mt-3 text-center">
                <span>Don't have an account? </span>
                <a asp-action="Register" class="text-info">Register</a>
            </div>
        </div>
    </div>
</div>